<div class="page-header">
  <h1>
    Cycles
    <a href="/cycles/new" class="btn btn-lg btn-success">New Cycle</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "cycles_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :notes_cont, "Notes contains" %>
    <%= f.text_field :notes_cont, :class => "form-control", :placeholder => "Notes contains" %>
  </div>

<div class="form-group">
  <%= f.label :length, "Length" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :length_gteq, :class => "form-control", :placeholder => "Length greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :length_lteq, :class => "form-control", :placeholder => "Length less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :end, "End" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='endgteqPicker'>
                  <%= f.text_field :end_gteq, :class => "form-control", :placeholder => "End greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='endlteqPicker'>
                  <%= f.text_field :end_lteq, :class => "form-control", :placeholder => "End less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#endgteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#endlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#endgteqPicker').on("dp.change", function (e) {
                  $('#endlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#endlteqPicker').on("dp.change", function (e) {
                  $('#endgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :begin, "Begin" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='begingteqPicker'>
                  <%= f.text_field :begin_gteq, :class => "form-control", :placeholder => "Begin greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='beginlteqPicker'>
                  <%= f.text_field :begin_lteq, :class => "form-control", :placeholder => "Begin less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#begingteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#beginlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#begingteqPicker').on("dp.change", function (e) {
                  $('#beginlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#beginlteqPicker').on("dp.change", function (e) {
                  $('#begingteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/cycles" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#cycles_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Begin</th>
        <th>End</th>
        <th>Length</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @cycles.each do |cycle| %>
      <tr>
        <td>
          <% if cycle.user.present? %>
            <a href="/users/<%= cycle.user.id %>">
              <%= cycle.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= cycle.begin %></td>
        <td><%= cycle.end %></td>
        <td><%= cycle.length %></td>
        <td><%= cycle.notes %></td>
        <td>
          <a href="/cycles/<%= cycle.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == cycle.user %>
            <a href="/cycles/<%= cycle.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_cycle/<%= cycle.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @cycles, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
